<Window
    x:Class="ModernCharMap.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ModernCharMap.WinUI.ViewModels"
    mc:Ignorable="d"
    Title="Modern CharMap">

    <Grid>
        <!-- Main content -->
        <Grid x:Name="MainContent" Opacity="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Menu bar -->
            <MenuBar Grid.Row="0">
                <MenuBarItem Title="File">
                    <MenuFlyoutItem Text="Install Font..." Click="InstallFont_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="I"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutItem Text="Uninstall Font"
                                    Command="{x:Bind ViewModel.UninstallSelectedFontCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control,Shift" Key="U"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="Refresh Font"
                                    Command="{x:Bind ViewModel.RefreshCurrentFontCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F5"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="Exit" Click="ExitApp_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Menu" Key="F4"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <MenuBarItem Title="Edit">
                    <MenuFlyoutItem Text="Copy Glyph"
                                    Command="{x:Bind ViewModel.CopyCommand}">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control,Shift" Key="C"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="Go to Codepoint..." Click="GoToCodepoint_Click">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="G"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuBarItem>

                <MenuBarItem Title="View">
                    <RadioMenuFlyoutItem x:Name="SortByBlockMenuItem" Text="Sort by Block"
                                         GroupName="SortMode" Click="SortByBlock_Click"/>
                    <RadioMenuFlyoutItem x:Name="SortByCodepointMenuItem" Text="Sort by Codepoint"
                                         GroupName="SortMode" Click="SortByCodepoint_Click"/>
                    <RadioMenuFlyoutItem x:Name="SortByNameMenuItem" Text="Sort by Name"
                                         GroupName="SortMode" Click="SortByName_Click"/>
                </MenuBarItem>
            </MenuBar>

            <!-- Command bar -->
            <CommandBar Grid.Row="1" DefaultLabelPosition="Right">
                <CommandBar.Content>
                    <StackPanel Orientation="Horizontal" Spacing="8"
                                VerticalAlignment="Center" Padding="8,0">
                        <TextBlock Text="Font:" VerticalAlignment="Center" FontSize="14"/>
                        <ComboBox x:Name="FontComboBox"
                                  Width="300"
                                  ItemsSource="{x:Bind ViewModel.FontFamilies}"
                                  SelectedItem="{x:Bind ViewModel.SelectedFontFamily, Mode=TwoWay}"
                                  FontSize="14"/>
                        <AutoSuggestBox x:Name="FontSearch"
                                        Width="280"
                                        PlaceholderText="Type to find a font..."
                                        ItemsSource="{x:Bind ViewModel.SearchSuggestions}"
                                        TextChanged="FontSearch_TextChanged"
                                        SuggestionChosen="FontSearch_SuggestionChosen"
                                        QuerySubmitted="FontSearch_QuerySubmitted"
                                        QueryIcon="Find"/>
                    </StackPanel>
                </CommandBar.Content>

                <AppBarButton Icon="Copy" Label="Copy"
                              Command="{x:Bind ViewModel.CopyCommand}"/>

                <AppBarElementContainer VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6" Padding="4,0">
                        <TextBlock Text="Go to:" VerticalAlignment="Center" FontSize="14"/>
                        <TextBox x:Name="CodepointTextBox"
                                 Width="120"
                                 PlaceholderText="e.g. 1FA99"
                                 Text="{x:Bind ViewModel.CodepointInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="14"
                                 KeyDown="CodepointTextBox_KeyDown"/>
                        <Button Content="Go"
                                Command="{x:Bind ViewModel.NavigateToCodepointCommand}"
                                VerticalAlignment="Center"/>
                    </StackPanel>
                </AppBarElementContainer>

                <AppBarElementContainer VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6" Padding="4,0">
                        <TextBlock Text="Sort:" VerticalAlignment="Center" FontSize="14"/>
                        <ComboBox Width="160"
                                  ItemsSource="{x:Bind ViewModel.SortModeOptions}"
                                  SelectedItem="{x:Bind ViewModel.SelectedSortOption, Mode=TwoWay}"
                                  FontSize="14"/>
                    </StackPanel>
                </AppBarElementContainer>

                <AppBarSeparator/>

                <AppBarButton Label="Install Font" Click="InstallFont_Click"
                              ToolTipService.ToolTip="Install a .ttf or .otf font file (per-user, no admin)">
                    <AppBarButton.Icon><SymbolIcon Symbol="Add"/></AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton Label="Uninstall"
                              Command="{x:Bind ViewModel.UninstallSelectedFontCommand}"
                              ToolTipService.ToolTip="Uninstall the selected font">
                    <AppBarButton.Icon><SymbolIcon Symbol="Delete"/></AppBarButton.Icon>
                </AppBarButton>

                <AppBarButton Label="Refresh"
                              Command="{x:Bind ViewModel.RefreshCurrentFontCommand}"
                              ToolTipService.ToolTip="Reload the selected font from disk">
                    <AppBarButton.Icon><SymbolIcon Symbol="Refresh"/></AppBarButton.Icon>
                </AppBarButton>
            </CommandBar>

            <!-- Grouped glyph grid -->
            <GridView Grid.Row="2"
                      x:Name="GlyphGridView"
                      ItemsSource="{x:Bind GroupedGlyphsSource.View, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedGlyph, Mode=TwoWay}"
                      SelectionMode="Single"
                      Padding="12,4,12,12"
                      IsItemClickEnabled="False">

                <GridView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="16" FontWeight="SemiBold"
                                           Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                           Margin="0,12,0,4"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </GridView.GroupStyle>

                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="vm:GlyphItem">
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Width="160" Height="160"
                                Padding="8" Margin="2"
                                RightTapped="GlyphCard_RightTapped">
                            <StackPanel HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Spacing="2">
                                <!-- Glyph character -->
                                <TextBlock Text="{x:Bind Display}"
                                           FontFamily="{x:Bind FontFamily}"
                                           FontSize="48"
                                           HorizontalAlignment="Center"/>
                                <!-- Name or label -->
                                <TextBlock Text="{x:Bind Label}"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           MaxLines="1"/>
                                <!-- Hex codepoint -->
                                <TextBlock Text="{x:Bind CodePointHex}"
                                           FontSize="10" Opacity="0.7"
                                           HorizontalAlignment="Center"/>
                                <!-- Decimal value -->
                                <TextBlock Text="{x:Bind DecimalString}"
                                           FontSize="10" Opacity="0.5"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Status bar -->
            <Border Grid.Row="3"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Padding="12,6">
                <TextBlock Text="{x:Bind ViewModel.StatusText, Mode=OneWay}"
                           Opacity="0.8" FontSize="12"/>
            </Border>
        </Grid>

        <!-- Splash overlay -->
        <Grid x:Name="SplashOverlay" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
            <Image x:Name="SplashImage"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   MaxWidth="620" MaxHeight="300"/>
        </Grid>
    </Grid>
</Window>
